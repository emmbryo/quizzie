<header>
    <div class="title-wrapper">
       <h1 class="h1-quizzie">Quizzie</h1>
    <% if (locals.user) { %>
        <div>
            <h2>Username: <%= locals.user.username %></h2>
            <% if (locals.user.role === 'admin') { %>
            <h3>Administrator</h3>
            <% } %>
        </div>
        
    <% } %> 
    </div>
    
    <nav class="header-nav-toggle">
      <button class="menu-toggle"><img id="menu-icon" src="./img/menu-white.png"></button>  
    </nav>
    
    <nav class="header-nav">
        <ul class="menu base-menu">
            <% if (locals.user) { %>
                <li><a href="./user/logout"><button>Logout</button></a></li>
            <% } else { %>
                <li><a href="./user/login"><button>Login</button></a></li>
            <% } %>
            <% if (locals.user && locals.user.role === 'admin') { %>
                <li><a href="./quiz/upload"><button>Upload</button></a></li>
                <li><a href="./quiz/edit"><button>Edit</button></a></li>
            <% } %>
            <li><a href="./quiz"><button>create quiz</button></a></li>
            <li><a href="./"><button>Home</button></a></li>
        </ul>
    </nav>
</header>