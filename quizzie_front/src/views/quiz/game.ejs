<div id="quiz-wrapper">
  <% if (viewData.type === 'idiom') { %>
    <% viewData.questions.forEach((question, index) => { %>
      <div class="idiom-wrapper">
        <idiom-question id="<%= 'idiom' + index %>" question="<%= question.question %>" options='<%= question.options %>' answer="<%= question.answer %>"></idiom-question>
      </div>
    <% }) %>
  <% } else if (viewData.type === 'vocab') { %>
    <% viewData.questions.forEach((question, index) => { %>
      <div class="vocab-wrapper">
        <vocab-question id="<%= 'vocab' + index %>" question="<%= question.question %>" answer="<%= question.answer %>"></vocab-question>
      </div>
    <% }) %>
  <% } else if (viewData.type === 'verbPhrase') { %>
    <% viewData.questions.forEach((question, index) => { %>
      <div class="verb-phrase-wrapper">
        <verb-phrase-question id="<%= 'phrase' + index %>" question="<%= question.question %>" meaning="<%= question.meaning %>" answer="<%= question.answer %>"></verb-phrase-question>
      </div>
    <% }) %>
  <% } %>
</div> 
